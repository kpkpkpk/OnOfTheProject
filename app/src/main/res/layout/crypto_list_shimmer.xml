<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmerViewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shimmerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/indexName"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="@drawable/shimmer_radius_4"
            app:layout_constraintStart_toStartOf="@id/shimmerContainer"
            app:layout_constraintTop_toTopOf="@id/shimmerContainer" />

        <TextView
            android:id="@+id/indexPrice"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/shimmer_radius_4"
            app:layout_constraintEnd_toEndOf="@id/shimmerContainer"
            app:layout_constraintTop_toTopOf="@id/indexName" />

        <TextView
            android:id="@+id/lastUpdatedIndex"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shimmer_radius_4"
            app:layout_constraintStart_toStartOf="@id/indexName"
            app:layout_constraintTop_toBottomOf="@id/indexPrice" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shimmer_radius_4"
            app:layout_constraintEnd_toEndOf="@id/indexPrice"
            app:layout_constraintTop_toBottomOf="@id/indexPrice" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
