<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/indexName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NASDAQ" />

    <TextView
        android:id="@+id/indexPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/indexName"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1058" />

    <TextView
        android:id="@+id/lastUpdatedIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/indexPrice"
        app:layout_constraintStart_toStartOf="@id/indexName"
        tools:text="1000"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/indexPrice"
        app:layout_constraintEnd_toEndOf="@id/indexPrice"
        tools:text="+16"
        android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>